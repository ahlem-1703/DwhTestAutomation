<div id="weeklySchedule" style="display: none;">
    <div>
        <label>Execute Every week on</label>
        <br>
        <br>
        <input type="radio" id="monday" name="weeklyDaysOfWeek" value="MONDAY">
        <label for="monday">Monday</label>
        <input type="radio" id="tuesday" name="weeklyDaysOfWeek" value="TUESDAY">
        <label for="tuesday">Tuesday</label>
        <input type="radio" id="wednesday" name="weeklyDaysOfWeek" value="WEDNESDAY">
        <label for="wednesday">Wednesday</label>
        <input type="radio" id="thursday" name="weeklyDaysOfWeek" value="THURSDAY">
        <label for="thursday">Thursday</label>
        <input type="radio" id="friday" name="weeklyDaysOfWeek" value="FRIDAY">
        <label for="friday">Friday</label>
        <input type="radio" id="saturday" name="weeklyDaysOfWeek" value="SATURDAY">
        <label for="saturday">Saturday</label>
        <input type="radio" id="sunday" name="weeklyDaysOfWeek" value="SUNDAY">
        <label for="sunday">Sunday</label>
        <br>
        <br>
        <label>at </label>
        <input class="form-group custom-time-input" type="time" id="weeklyExecutionTime" name="weeklyExecutionTime">
    </div>
    <br>
    <div>
        <label for="endAtWeekly">End at :</label>
        <input class="form-group custom-time-input" type="date" name="endAtWeekly" id="endAtWeekly">
    </div>
    <br>
</div>